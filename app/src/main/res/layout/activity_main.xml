<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="UselessParent">

    <Button
        android:id="@+id/startDataColl"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Start"
        android:textSize="15sp"
        android:onClick="startDataColl" />

    <Button
        android:id="@+id/stopDataColl"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Stop"
        android:textSize="15sp"
        android:onClick="stopDataColl" />

    <Button
        android:id="@+id/btnToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="toggleViews"
        android:text="PCA Analysis 3D-2D"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnShapeEllipticFourier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="doEllipticFourierShapeAnalysis"
        android:text="Elliptic Fourier Descriptor"
        android:textSize="15sp" />

</LinearLayout>

